<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addLocationViewPager">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <Button
                android:id="@+id/bk_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:theme="@style/coloredButtons"
                android:layout_marginLeft="4dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <View
                    android:id="@+id/firstPageDot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/round_dots"
                    android:layout_marginRight="5dp"/>

                <View
                    android:id="@+id/secondPageDot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/inactive_dots"
                    android:layout_marginRight="5dp"/>

                <View
                    android:id="@+id/thirdPageDot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/inactive_dots"/>

            </LinearLayout>

            <Button
                android:id="@+id/nt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/coloredButtons"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Next"
                android:onClick="saveLocation" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


